<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/task_his_collect_title_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/margin_10"
                android:text="设施采集"
                android:textColor="@color/btn_blue"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/task_his_line1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_3"
                android:background="@color/btn_blue" />
        </LinearLayout>


        <View
            android:layout_width="@dimen/margin_1"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10"
            android:background="@color/line" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/task_his_hight_title_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/margin_10"
                android:text="高中压"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/task_his_line2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_3"
                android:background="@color/btn_blue"
                android:visibility="gone" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/margin_1"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10"
            android:background="@color/line" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/task_his_industry_title_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/margin_10"
                android:text="工业用户"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/task_his_line3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_3"
                android:background="@color/btn_blue"
                android:visibility="gone" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/margin_1"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10"
            android:background="@color/line" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/task_his_business_title_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/margin_10"
                android:text="商业用户"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/task_his_line4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_3"
                android:background="@color/btn_blue"
                android:visibility="gone" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/margin_1"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10"
            android:background="@color/line" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/task_his_ganline_title_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/margin_10"
                android:text="管线"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/task_his_line5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_3"
                android:background="@color/btn_blue"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/task_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>