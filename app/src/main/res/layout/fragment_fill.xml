<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.yunwei.wetlandpark.view.ReboundScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/fillBaseFragment_content_fl"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </FrameLayout>

        </LinearLayout>
    </com.yunwei.wetlandpark.view.ReboundScrollView>

    <LinearLayout
        android:id="@+id/fillBaseFragment_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingStart="@dimen/margin_10"
        android:paddingEnd="@dimen/margin_10"
        android:paddingBottom="@dimen/margin_5"
        >

        <Button
            android:id="@+id/fillBaseFragment_save_btn"
            style="@style/formButton"
            android:text="@string/save"
            android:background="@drawable/common_btn_red_selector"
            />

        <Button
            android:id="@+id/fillBaseFragment_submit_btn"
            android:layout_marginLeft="@dimen/margin_10"
            style="@style/formButton"
            android:text="@string/submit"
            android:background="@drawable/common_btn_purple_selector"
            />
    </LinearLayout>
</RelativeLayout>