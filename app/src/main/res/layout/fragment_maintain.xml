<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:item="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.yunwei.wetlandpark.view.ReboundScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <com.yunwei.wetlandpark.widget.FormWriteView
                android:id="@+id/maintainFragment_facilityCode_formView"
                style="@style/formItemCommonStyle"
                item:wvItemName="设施编号"/>
            <com.yunwei.wetlandpark.widget.FormWriteView
                android:id="@+id/maintainFragment_facilityType_formView"
                style="@style/formItemCommonStyle"
                item:wvItemName="设施类型"/>
            <com.yunwei.wetlandpark.widget.FormWriteView
                android:id="@+id/maintainFragment_address_formView"
                style="@style/formItemCommonStyle"
                item:wvItemName="存放地点"/>
            <com.yunwei.wetlandpark.widget.FormWriteView
                android:id="@+id/maintainFragment_time_formView"
                style="@style/formItemCommonStyle"
                item:wvItemName="维护时间"/>

            <LinearLayout
                android:id="@+id/maintainFragment_HD_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <com.yunwei.wetlandpark.widget.FormWriteView
                    android:id="@+id/maintainFragment_HDType_formView"
                    style="@style/formItemCommonStyle"
                    android:visibility="gone"
                    item:wvItemName="隐患描述"
                    />
                <com.yunwei.wetlandpark.widget.FormWriteView
                    android:id="@+id/maintainFragment_HDDesc_formView"
                    style="@style/formItemCommonStyle"
                    android:visibility="gone"
                    item:wvItemName="隐患描述"
                    />
            </LinearLayout>

            <com.yunwei.wetlandpark.widget.FormSeletorView
                android:id="@+id/maintainFragment_maintainDesc_formView"
                style="@style/formItemCommonStyle"
                item:wvItemName="维护描述"
                item:hint_seletor="选择维护内容"
                item:name_seletor="维护记录" />

            <com.yunwei.wetlandpark.widget.FormWriteView
                android:id="@+id/maintainFragment_remark_formView"
                style="@style/formItemCommonStyle"
                item:wvItemName="备注"
                />
            <FrameLayout
                android:id="@+id/maintainFragment_imgPicker_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>
    </com.yunwei.wetlandpark.view.ReboundScrollView>


</LinearLayout>