<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginTop="@dimen/margin_10">

        <CheckBox
            android:id="@+id/review_water_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.yunwei.wetlandpark.widget.FormShowView
                android:id="@+id/review_water_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.yunwei.wetlandpark.widget.FormShowView
                android:id="@+id/review_deger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.yunwei.wetlandpark.widget.FormShowView
                android:id="@+id/review_water_meter_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.yunwei.wetlandpark.widget.FormShowView
                android:id="@+id/review_addr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/review_map_addr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_seletor"
                android:drawableRight="@mipmap/icon_card_searcharound_blue"
                android:padding="@dimen/margin_15"
                android:textSize="@dimen/text_size_15"
                android:text="地图查看"
                android:textColor="@color/black" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>