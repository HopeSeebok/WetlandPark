<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.yunwei.library.pulltoprefresh.PullToRefreshListView
        android:id="@+id/water_meter_plan_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/transparency"
        android:listSelector="@color/transparency"/>

    <TextView
        android:id="@+id/water_meter_plan_empty_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/http_empty_str" />

</LinearLayout>