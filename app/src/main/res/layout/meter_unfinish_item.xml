<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:background="@color/white"
        android:orientation="vertical">

        <com.yunwei.wetlandpark.widget.FormShowView
            android:id="@+id/meter_unF_water_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.yunwei.wetlandpark.widget.FormShowView
            android:id="@+id/meter_unF_c_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.yunwei.wetlandpark.widget.FormShowView
            android:id="@+id/meter_unF_c_addr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/meter_unF_map_addr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_seletor"
            android:drawableRight="@mipmap/icon_card_searcharound_blue"
            android:padding="@dimen/margin_15"
            android:text="地图查看"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/black" />

        <View style="@style/line_1" />

    </LinearLayout>
</LinearLayout>