<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_Fl"
    style="@style/layout_content_mw">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:background="@mipmap/task_list_bj"
        android:padding="10dp">

        <TableLayout
            style="@style/layout_content_mw"
            android:padding="5dp">
            <!-- 设施ID -->
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                >
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:textSize="16sp"
                        android:id="@+id/taskpoint_id_label"
                        android:layout_marginLeft="6dp"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="设施编号：" />

                    <TextView
                        android:textSize="16sp"
                        android:id="@+id/taskpoint_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="DGF46546" />
                </LinearLayout>
            </TableRow>

            <!-- 设施类型 -->
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                >
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:textSize="16sp"
                        android:layout_marginLeft="5dp"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="设施类型：" />

                    <TextView
                        android:textSize="16sp"
                        android:id="@+id/taskpoint_device_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="消火栓" />
                </LinearLayout>
            </TableRow>

            <!-- 隐患类型-->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:textSize="16sp"
                        android:id="@+id/hiddent_tv_label"
                        android:layout_marginLeft="5dp"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="隐患类型：" />

                    <TextView
                        android:textSize="16sp"
                        android:id="@+id/task_hiddenType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLength="10"
                        android:text="盖子丢了,水了，水电dsdf 费" />
                </LinearLayout>
            </TableRow>

        </TableLayout>
    </LinearLayout>

</FrameLayout>