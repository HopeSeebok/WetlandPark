<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_select_trouble_position"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.yunwei.map.MapView
        android:id="@+id/selectTroublePositionActivity_mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <Button
        android:id="@+id/selectTroublePositionActivity_commit_bt"
        android:layout_marginBottom="@dimen/margin_15"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_white"
        android:padding="@dimen/margin_10"
        android:text="选择位置"/>

    <ImageView
        android:src="@mipmap/choose_location_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
