<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_20"
        android:paddingRight="@dimen/margin_5">


        <TextView
            android:id="@+id/formRadioSelector_title_tv"
            android:paddingBottom="@dimen/margin_8"
            android:paddingTop="@dimen/margin_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:maxLines="1"
            android:minWidth="@dimen/formItemNameWidth"
            android:textSize="@dimen/text_size_16" />


        <RadioGroup
            android:id="@+id/formRadioSelector_rdoGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/margin_2"
            >

            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/formRadioSelector_firstButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="选项"
                android:padding="@dimen/margin_10"
                android:checked="true"
                />

            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/formRadioSelector_secondButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="选项"
                android:padding="@dimen/margin_10"
                />

            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/formRadioSelector_thirdButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="选项"
                android:padding="@dimen/margin_10"
                />


        </RadioGroup>
    </LinearLayout>

    <View style="@style/line_1"
        android:layout_marginLeft="@dimen/margin_20"/>
</LinearLayout>