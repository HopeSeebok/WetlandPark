<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--小时的选择器-->
    <com.yunwei.library.view.NumberPickerView
        android:id="@+id/picker_hour"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="8dp"
        android:contentDescription="hour_picker 小时的选择"
        app:npv_DividerHeight="2.5dp"
        app:npv_HintText="@string/hour"
        app:npv_RespondChangeOnDetached="false"
        app:npv_TextSizeHint="16sp" />

    <!--分钟的选择器-->
    <com.yunwei.library.view.NumberPickerView
        android:id="@+id/picker_minute"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="8dp"
        android:contentDescription="minute_picker 分钟的选择"
        app:npv_DividerHeight="2.5dp"
        app:npv_HintText="@string/minute"
        app:npv_RespondChangeOnDetached="false"
        app:npv_TextSizeHint="16sp" />

</merge>